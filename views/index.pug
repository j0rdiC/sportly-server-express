doctype html
html(lang="en")
  head
    title= title
  body
    h1= message

    a(href='google.com') Google
    |
    |
    - let auth = true 
    p(style="color: blue") #{auth ? 'Authenticated' : 'Not Authenticated'}

    - let friends = 10
    case friends 
      when 0
        p You have no friends
      when 1
        p You have 1 friend
      default
        p You have #{friends} friends

    - let user = {description: 'I am a user'}
    - let authorized = false 
    #user
      if user.description 
        h2(style="color: red")= user.description
        p.description= user.description
      else if authorized 
        h2.blue Description
        p.description You have no description
      else
        h2.red Description
        p.description You have no description